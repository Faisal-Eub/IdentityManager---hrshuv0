@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
}


<div>
    <div class="col-6">
        <h1 class="text-primary">Role List</h1>
    </div>
    <div class="col-6">
        <a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary">Create new Role</a>
    </div>
</div>

<div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>
                        <div class="text-center">
                            
                            <form asp-action="Delete" asp-route-id="@user.Id">
                                <a asp-action="Upsert" asp-route-id="@user.Id" class="btn btn-info text-white">Edit</a>
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-danger">Delete</button>

                            </form>

                        </div>
                    </td>

                </tr>
            }
        </tbody>

    </table>

</div>
