@model ExternalLoginConfirmationVm

@{
    ViewBag.Title = "Register";
}

<h1>Associate your @ViewData["ProviderDisplayName"]</h1>

<div class="w-50">
    <form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" role="form">
        <h4>Association Form</h4>
        <p>You have successfully authenticate with <strong>@ViewData["ProviderDisplayName"].</strong>
            Please enter a username for this site below and click Register button to finish logging in.</p>
        <hr/>
    
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <div class="from-group row mt-2">
            <label asp-for="Email" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="from-group row mt-2">
            <label asp-for="Name" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row mt-2">
            <div class="offset-md-2 col-md-10">
                <button type="submit" class="btn btn-outline-success">Register</button>
            </div>
        </div>
        
    </form>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    
}